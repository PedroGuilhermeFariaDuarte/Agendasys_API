{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "mongo": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "no-console": "off",
    "prettier/prettier": "error",
    "class-methods-use-this": "off",
    "no-param-reassing": "off",
    "camelcase": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": [
          "next",
          "Error"
        ]
      }
    ],
    "import/extensions": [
      "warn",
      "never",
      {
        "ts": "never"
      }
    ],
    "lines-between-class-members": "off"
  }
}
